<odoo>
    <record id="view_medication_plan_tree" model="ir.ui.view">
        <field name="name">hospital.medication.plan.tree</field>
        <field name="model">hospital.medication.plan</field>
        <field name="arch" type="xml">
            <tree>
                <field name="patient_id"/>
                <field name="medication_name"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </tree>
        </field>
    </record>

    <record id="view_medication_plan_form" model="ir.ui.view">
        <field name="name">hospital.medication.plan.form</field>
        <field name="model">hospital.medication.plan</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="patient_id"/>
                        <field name="medication_name"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="dosage"/>
                        <field name="frequency"/>
                        <field name="instructions"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_medication_plan" model="ir.actions.act_window">
        <field name="name">Medication Plans</field>
        <field name="res_model">hospital.medication.plan</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_medication_plan" name="Medication Plans" parent="hospital_management_menu" action="action_medication_plan"/>
</odoo>
